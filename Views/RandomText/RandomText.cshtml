
@{
    ViewData["Title"] = "RandomText";
}

@model RandomTextCase.Models.Input

<style>


    .height-14 {
        height: 12rem !important;
    }
</style>
<div class="py-5">
    <h4 class="mb-3 text-center">Random Number to Text</h4>
    
</div>
@(ViewBag.Message)
<form asp-action="RandomText" asp-controller="RandomText" method="post">    
    <input type="text" asp-for="inputText" placeholder="Type Number between 1-50" />
    <span asp-validation-for="inputText"></span> <br />


    <button type="submit">Send</button>

</form>